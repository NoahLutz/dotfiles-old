[colors]
transparent = #00000000
background = #374d58
foreground = #c3af97
primary = #536b6e
secondary = #59405e
alert = #6b4657
highlight = #d0dad8

[fonts]
primary = -*-tewi-medium-*-*-*-12-*-*-*-*-*-*-*

[global/wm]
margin-top = 1
margin-bottom = 1

[bar/workspace]
monitor = ${env:MONITOR:eDP1}
bottom = true
width = 100%
height = 7 
offset-x = 0
offset-y = 12 
wm-restack = bspwm

background = ${colors.transparent}
foreground = ${colors.transparent}

font-0 = ${fonts.primary}

modules-center = bspwm

[bar/topdate]
monitor = ${env:MONITOR:eDP1}
width = 190
height = 30
offset-x = 1710
offset-y = 12

wm-restack = bspwm

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = ${fonts.primary}

modules-center = date

[bar/bat_bright_vol]
monitor = ${env:MONITOR:eDP1}
width = 250
height = 30
offset-x = 1450
offset-y = 12

wm-restack = bspwm

module-margin = 1

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = ${fonts.primary}

modules-center = volume backlight battery

[bar/wireless]
monitor = ${env:MONITOR:eDP1}
width = 150
height = 30
offset-x = 1290
offset-y = 12

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = ${fonts.primary}
modules-center = network


[bar/checkupdates]
monitor = ${env:MONITOR:eDP1}
width = 75
height = 30
offset-x = 1205
offset-y = 12

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = ${fonts.primary}
modules-center = checkupdates

[module/bspwm]
type = internal/bspwm

pin-workspaces = true
inline-mode = false

enable-click = false
enable-scroll = false

format = <label-state>

label-focused-foreground = ${colors.transparent}
label-focused-background = ${colors.foreground}
label-focused-underline= ${colors.transparent}
label-focused-padding = 20

label-occupied-padding = 20
label-occupied-foreground = ${colors.transparent}
label-occupied-background = ${colors.primary}
label-occupied-underline = ${colors.transparent}

label-urgent-foreground = ${colors.transparent}
label-urgent-background = ${colors.alert}
label-urgent-underline = ${colors.transparent}
label-urgent-padding = 20

label-empty-foreground = ${colors.transparent}
label-empty-background = ${colors.secondary}
label-empyty-underline = ${colors.transparent}
label-empty-padding = 20

[module/backlight]
type = internal/xbacklight
format = <label>
label = BRT| %percentage%%
card = intel_backlight

[module/time]
type = internal/date
interval = 5
time = %I:%M %p
time-alt = %H:%M:%S
format-prefix-foreground = ${colors.foreground}
label = %time%

[module/date]
type=internal/date
interval = 5
date = %b %d %r %Z
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.transparent}
label = %date%

[module/volume]
type = internal/volume
master-mixer = Master
format-volume = <label-volume>
label-volume = VOL| %percentage%%
label-muted = VOL| mute

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 99
label-charging = BAT+| %percentage%%
label-discharging = BAT-| %percentage%%
label-full = BAT| %percentage%%
poll-interval = 5
format-charging = <label-charging>
format-discharging = <label-discharging>

[module/powermenu]
type = custom/menu

label-open =  power
label-open-foreground = ${colors.secondary}
label-close =  cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/network]
type=internal/network
interface = wlp2s0
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected = WIFI| %essid%
label-disconnected = disconnected

[module/checkupdates]
type = custom/script
label = UPD| %output%
exec = checkupdates | wc -l
interval = 500


